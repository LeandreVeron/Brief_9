{% extends 'base.html.twig' %}

{% block title %}Jeux{% endblock %}

{% block body %}

{% include "header.html.twig" %}

<div class="container">
    <!-- Example row of columns -->
    <div class="row">

        <p> {{app.request.get('_route')}} </p>
        
        <p> {{app.request.attributes.get('_route')}} </p>
        <p> {{app.request.pathinfo}}</p>
        <p> {{app.request.uri}}</p>

        {% for jeu in lastJeux %}
        <div class="col-md-3">
            <a href= "{{app.request.uri ~ jeu.slug}}"><h2>{{jeu.title}}</h2></a>            
            <img src="{{'/' ~ jeu.image}}" alt="" width="150px" height="150px">
            <p> {{jeu.description}} </p>
            <p><a class="btn btn-secondary" href="#" role="button">View details &raquo;</a></p>
        </div>

        {% endfor %}
        
    </div>

    <hr>

    </div> <!-- /container -->

{% include "footer.html.twig" %}
{% endblock %}

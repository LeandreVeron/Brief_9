{% extends 'base.html.twig' %}

{% block title %}Avis{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>



{% include "header.html.twig" %}

<div class="container">
    <!-- Example row of columns -->
    <div class="row">

        {% for ligne in avis %}
        <div class="col-md-3">
            {# <a href= "{{app.request.uri ~ '/' ~ ligne.slug}}"><h2>{{ligne.title}}</h2></a>             #}
            <p> {{ligne.commentaire}} </p>
            <p> {{ligne.note}} </p>
            <p> {{ligne.is_valid}} </p>
            <a href=" {{ path('avis.edit', {id: ligne.id}) }} " class="btn btn-info">Modifier</a>
            <a href=" {{ path('avis.delete', {id: ligne.id}) }} " class="btn btn-info">Supprimer</a>
        </div>

        {% endfor %}
        
    </div>

    <hr>

    </div> <!-- /container -->


{% include "footer.html.twig" %}
{% endblock %}



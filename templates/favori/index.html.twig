{% extends 'base.html.twig' %}

{% block title %}Hello FavoriController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Mes favoris</h1>

    dump(dataPanier);

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Image</th>
                <th>Lien Site officiel</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for jeu in dataPanier %}
                <tr>
                    <td>{{ jeu.Title }}</td>
                    <td class="text-end">{{ jeu.Description }}</td>
                    <td>{{ jeu.Image }}</td>
                    <td>{{ jeu.Url }}</td>
                    <td>
                        <a href="{{path("cart_delete", {id: jeu.id})}}" class="btn btn-danger">
                            <i class="bi bi-cart-x"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucun favori</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    

    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Inscription</h1>
                {{ form_start(registrationForm) }}
                    <fieldset>
                        <legend>Mon identit√©</legend>
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Mot de passe'
                        }) }}
                        {{ form_row(registrationForm.pseudo, {
                            label: 'Pseudo'
                        }) }}

                    </fieldset>

                    <fieldset>
                            <legend>Consentement</legend>
                            {{ form_row(registrationForm.RGPDConsent, {
                                label: 'Consentement RGDP'
                            }) }}
                    </fieldset>

                    <div class="col">
                        <button type="submit" class="btn btn-primary mt-3">Valider</button>
                        <a href="{{ path('app_login') }}" class="btn btn-secondary mt-3">Me connecter</a>
                    </div>
                    
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>

    
{% endblock %}
